<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"

    android:weightSum="1">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="76dp"
        app:srcCompat="@drawable/ic_user_24dp"
        android:id="@+id/photo_user"
        android:layout_gravity="left"

        android:layout_weight="0.62">

    </ImageView>



    <LinearLayout
        android:id="@+id/containerOfItem"
        android:orientation="vertical"
        android:layout_width="299dp"
        android:layout_height="99dp"
        android:background="#f7f7f7">

        <TextView
            android:text="Numbre de la persona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:id="@+id/textNameBeneficiary"
           />

        <TextView
            android:text="Cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textAmount"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"
            android:drawableRight="@drawable/ic_credit_card_black_24dp"
            />
    </LinearLayout>
</LinearLayout>
