<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EEEEEE"
    tools:context="com.makingdevs.ui.UserActivity">

    <ImageView
        android:id="@+id/imaUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/im_user"
       />
    <LinearLayout android:orientation="vertical"
        android:id="@+id/linaer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imaUser"
        android:layout_marginTop="50dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/laname"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#042848"
                android:inputType="text"
                android:id="@+id/tex_editName"
                android:ems="10"
                android:hint="Nombre de usuario"
                android:theme="@style/CampoTextoAzul"
                android:drawableRight="@drawable/ic_edit_24dp"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/laccount"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#042848"
                android:inputType="number"
                android:id="@+id/tex_editA"
                android:ems="10"
                android:hint="NÃºmero de cuenta"
                android:maxLength="18"
                android:theme="@style/CampoTextoAzul"
                android:drawableRight="@drawable/account"
                />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linea3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.3"
        android:layout_below="@+id/linaer1"
        android:layout_marginTop="10dp">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_fontIconResource="&#xf1fc;"
            fancy:fb_borderWidth="2dp"
            android:layout_marginRight="2dp"
            fancy:fb_borderColor="#042848"
            fancy:fb_radius="30dp"
            fancy:fb_text="Guardar   "
            fancy:fb_textColor="#000000"
            fancy:fb_ghost="true"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="2dp"
            fancy:fb_fontIconResource="&#xf12d;"
            fancy:fb_borderWidth="2dp"
            fancy:fb_borderColor="#042848"
            fancy:fb_radius="30dp"
            fancy:fb_text="Borrar"
            fancy:fb_textColor="#000000"
            fancy:fb_ghost="true"

            />



    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.3"
        android:layout_below="@+id/linea3"
        android:layout_margin="20dp"
        >
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/button_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="2dp"
            fancy:fb_fontIconResource="&#xf283;"
            fancy:fb_borderWidth="2dp"
            fancy:fb_borderColor="#042848"
            fancy:fb_radius="30dp"
            fancy:fb_text="Depositar"
            fancy:fb_textColor="#000000"
            fancy:fb_ghost="true"


            />
    </LinearLayout>

</RelativeLayout>
